@using database.DataModel
@using Microsoft.AspNetCore.Identity
@model IEnumerable<database.DataModel.Users>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>
    @ViewData["name"]
</h3>
<hr />
<form class="form-inline">
    <label>Выберите компанию:</label>
    <select  class="form-control">
        @foreach (var comp in Model)
        {
            <option value="@comp.Id">@comp.Name</option>
        }
    </select>
    <input type="submit" />
</form>
@foreach (var elem in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading"><a asp-route-name="@elem.UserName">@elem.UserName</a></div>
        <div class="panel-body">
            <br>
            <b>Логін:</b> <a asp-route-name="@elem.Name"><span style="font-size: 12px;color: black;">@elem.Name</span></a>
            <a asp-controller="Game" asp-action="DeleteAdmin" asp-route-name="@elem.Name" class="btn btn-warning" style="float:right;">Забрати роль адміна</a>
        </div>
    </div>
  
}
<hr />